<section class="container mt-5 vh-100">
  <h2>Planifier une Rencontre avec un Combattant</h2>
  <form method="/coach/meeting" method="POST">
    <div class="mb-3">
      <label for="figherName" class="form-label">Nom du Combattant</label>
      <select class="form-select fight-option" id="figherName">
        <option selected>Choisir...</option>
        {{#each ad}}
          <option name="player" value="{{this.id_adherent}}">{{this.firstname}} {{this.lastname}}</option>
        {{/each}}
      </select>
    </div>
    <div class="mb-3">
      <label for="meetingDate" class="form-label">Date de la Rencontre</label>
      <input type="date" name="date" class="form-control" id="meetingDate" />
    </div>
    <div class="mb-3">
      <label for="meetingTime" class="form-label">Heure de la Rencontre</label>
      <input type="time" name="time" class="form-control" id="meetingTime" />
    </div>
    <div class="mb-3">
      <label for="meetingInfo" class="form-label">Informations sur la Rencontre</label>
      <textarea class="form-control" name="message" id="meetingInfo" maxlength="250" rows="3" placeholder="Entrez toutes les informations ou instructions supplÃ©mentaires ici."></textarea>
    </div>
    <button type="submit" class="btn schedule-btn">Planifier la Rencontre</button>
  </form>
</section>